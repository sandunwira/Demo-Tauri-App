{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "PenPace",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "publisher": "Sandun Wiratunga",
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.penpace.app",
      "longDescription": "A minimalistic open-source notes app",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "A minimalistic open-source notes app",
      "targets": "all",
      "appimage": {
        "bundleMediaFramework": false
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "PenPace",
        "width": 1500,
        "height": 750,
        "url": "https://penpace.sandunwira.repl.co",
        "fullscreen": false,
        "focus": true,
        "resizable": true,
        "decorations": true,
        "center": true,
        "visible": false
      },
      
      {
        "title": "PenPace",
        "width": 450,
        "height": 200,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "fullscreen": false,
        "focus": true,
        "resizable": false,
        "decorations": false,
        "center": true,
        "skipTaskbar": false
      }
    ]
  }
}
