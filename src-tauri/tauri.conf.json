{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "PenPace",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "print": false,
        "setFullscreen": true,
        "setResizable": true
      }
    },
    "bundle": {
      "active": true,
      "publisher": "Sandun Wiratunga",
      "copyright": "Sandun Wiratunga",
      "category": "Productivity",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "PenPace",
      "longDescription": "An opensource note-taking app",
      "shortDescription": "An opensource note-taking app",
      "externalBin": [],
      "resources": [],
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "en-US"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false,
      "dialog": true,
      "endpoints": [

      ],
      "windows": {
        "installMode": "passive"
      },
      "pubkey": ""
    },
    "windows": [
      {
        "title": "PenPace",
        "width": 1500,
        "height": 750,
        "url": "index.html",
        "fullscreen": false,
        "focus": true,
        "resizable": true,
        "decorations": true,
        "center": true,
        "visible": false
      }
    ]
  }
}
